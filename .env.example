# Fitbit API credentials (from dev.fitbit.com > Manage > My Apps)
FITBIT_CLIENT_ID=your_client_id_here
FITBIT_CLIENT_SECRET=your_client_secret_here

# Google Sheet ID (from the sheet URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit)
GOOGLE_SHEET_ID=your_sheet_id_here

# Path to Google service account JSON key file
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json

# Path to store Fitbit OAuth tokens
FITBIT_TOKEN_FILE=tokens.json

# API key for the HTTP server endpoint (generate a random string)
API_KEY=your_secret_api_key_here

# Port for the HTTP server (default: 8585)
SERVER_PORT=8585
